<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!--added this in so that the font awesome icons can show up in my header - they weren't showing up-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="nameTextField">PetName</label>
                <input type="text" class="form-control" id="nameTextField" placeholder="Enter the pets name" name="PetName" value="<%=Book.PetName%>" required>
            </div>
            <div class="form-group">
                <label for="ageTextField">Age</label>
                <input type="text" class="form-control" id="ageTextField" placeholder="Enter the pet's age" name="Age" value="<%=Book.Age%>" required>
            </div>
            <div class="form-group">
                <label for="breedTextField">Breed</label>
                <input type="text" class="form-control" id="breedTextField" placeholder="Enter the pet's breed" name="Breed" value="<%=Book.Breed%>" required>
            </div>
            <div class="form-group">
            <!-- it's text area because it takes more space -->
                <label for="descriptionTextArea">Description</label>
                <textArea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the description of the pet" name="Description" required><%=Book.Description%></textArea>
            </div>
            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control" id="priceTextField" placeholder="Price of the pet" name="Price" value="<%=Book.Price%>" required>
            </div>
            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>

</div>
<%- include ../Partials/footer.ejs %>